<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/judul"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Biodata Diri"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textAlignment="center"
        />
    <TextView
        android:layout_below="@+id/judul"
        android:id="@+id/nama"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama    : Reza Gunawan"
        android:textSize="20dp"
        android:layout_marginLeft="50dp"
        />
    <TextView
        android:layout_below="@+id/nama"
        android:id="@+id/nim"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NIM        : 1147050138"
        android:textSize="20dp"
        android:layout_marginLeft="50dp"
        />
    <TextView
        android:layout_below="@+id/nim"
        android:id="@+id/jurusan"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jurusan : Teknik Informatika"
        android:textSize="20dp"
        android:layout_marginLeft="50dp"
        />
    <TextView
        android:layout_below="@+id/jurusan"
        android:id="@+id/kota"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kota       : Bandung"
        android:textSize="20dp"
        android:layout_marginLeft="50dp"
        />
</RelativeLayout>